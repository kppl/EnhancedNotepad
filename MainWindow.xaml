<Window x:Class="EnhancedNotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnhancedNotepad"
        mc:Ignorable="d"
        Title="Enhanced Notepad" Height="600" Width="900" Background="#FF999999">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="880" Height="20"/>
        <Button Content="Go" HorizontalAlignment="Center" Height="24" Margin="0,75,0,0" VerticalAlignment="Top" Width="880"/>
        <RichTextBox Margin="0,104,0,0" TextChanged="RichTextBox_TextChanged" Name="MainTextBox" SpellCheck.IsEnabled="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
